<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textGrey</item>
        <item name="colorPrimaryDark">@color/statusBarGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToggleButtonStress" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/state_colour_stress</item>
        <item name="android:textColor">@color/text_state_colour</item>
        <item name="colorAccent">@color/buttonGreen</item>
    </style>

    <style name="AppTheme.ToggleButtonPos" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/state_colour_pos</item>
        <item name="android:textColor">@color/text_state_colour</item>
        <item name="colorAccent">@color/buttonGreen</item>
    </style>

    <style name="AppTheme.StressSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/stressColor</item>
        <item name="colorSwitchThumbNormal">@color/textGrey</item>
        <item name="android:colorForeground">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.SitSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/greenPosture</item>
        <item name="colorSwitchThumbNormal">@color/textGrey</item>
        <item name="android:colorForeground">@color/colorPrimaryDark</item>
    </style>

</resources>
